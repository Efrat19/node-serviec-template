{
  "name": "node-service-template",
  "version": "1.0.0",
  "description": "Node Application based on express js with es6 and integrated with mongodb",
  "main": "dist/app.js",
  "scripts": {
    "lint": "eslint . --fix",
    "build:dev": "babel src --out-dir dist --source-maps",
    "build:prod": "babel src --out-dir dist",
    "serve": "node ./dist/app.js",
    "dev": "nodemon -w src --exec \"npm run build:dev && npm run serve\""
  },
  "author": "Efrat Levitan",
  "url": "https://github.com/Efrat19/node-service-template",
  "license": "ISC",
  "dependencies": {
    "@babel/runtime": "^7.4.5",
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.18.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.15.4",
    "jsonwebtoken": "^8.0.1",
    "log4js": "^5.3.0",
    "mongodb": "^2.2.31",
    "mongodb-migrate": "^2.0.2",
    "mongodb-migrations": "^0.8.5",
    "mongoose": "^5.7.5",
    "mongoose-auto-increment": "^5.0.1",
    "mongoose-unique-validator": "^1.0.6",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "nodemon": "^1.19.4",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.18.0",
    "pre-commit": "^1.2.2"
  },
  "pre-commit": [
    "lint"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  }
}
